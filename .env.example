# =============================================================================
# TruthSeeker - Environment Variables
# Copy to .env and fill in your values
# =============================================================================

# Environment
TS_ENVIRONMENT=development  # development | staging | production
TS_DEBUG=true
TS_LOG_LEVEL=INFO

# =============================================================================
# DATABASE
# =============================================================================
TS_POSTGRES_HOST=localhost
TS_POSTGRES_PORT=5432
TS_POSTGRES_DB=truthseeker
TS_POSTGRES_USER=truthseeker
TS_POSTGRES_PASSWORD=truthseeker_dev

# Qdrant Vector DB
TS_QDRANT_HOST=localhost
TS_QDRANT_PORT=6333

# Redis Cache
TS_REDIS_HOST=localhost
TS_REDIS_PORT=6379

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# OpenAI (primary)
TS_OPENAI_API_KEY=sk-...

# Anthropic (optional, for Judge-Dredd)
TS_ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini (optional, for Antigravity agents)
TS_GOOGLE_API_KEY=...

# Model Configuration
TS_LLM_MODEL=gpt-4-turbo
TS_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# SCRAPER
# =============================================================================
TS_SCRAPER_TIMEOUT=30
TS_SCRAPER_MAX_CONCURRENT=5
TS_SCRAPER_USER_AGENT=TruthSeeker/1.0

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
TS_RAG_CHUNK_SIZE=512
TS_RAG_CHUNK_OVERLAP=50
TS_RAG_TOP_K=5
TS_RAG_MIN_SIMILARITY=0.7

# =============================================================================
# AUDITOR
# =============================================================================
TS_AUDITOR_QUESTIONS_PER_SESSION=20
TS_AUDITOR_WAIT_BETWEEN_QUESTIONS=2
TS_JUDGE_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# API SERVER
# =============================================================================
TS_API_HOST=0.0.0.0
TS_API_PORT=8000
TS_API_CORS_ORIGINS=["http://localhost:3000"]
